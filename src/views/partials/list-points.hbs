<table class="table is-fullwidth">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Weather</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each placemark.points}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                {{description}}
            </td>
            <td>
                {{latitude}}
            </td>
            <td>
                {{longitude}}
            </td>
            <td>
                {{weather}}
            </td>
            <td>
                <a href="/point/{{../placemark._id}}/updatePoint/{{_id}}" class="ui icon button">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                <a href="/placemark/{{../placemark._id}}/deletePoint/{{_id}}" class="ui icon button">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
